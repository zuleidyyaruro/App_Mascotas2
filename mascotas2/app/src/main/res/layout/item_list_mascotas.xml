<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvMascotas"
        android:layout_gravity="center_horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagenMascota"
                android:layout_width="match_parent"
                android:layout_height="368dp"

                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView

                    android:layout_width="29dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/huedo_blanco" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvNombreMascota"
                    android:text="Nombre Cachorro"
                    android:textStyle="italic"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/tvNumero"
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="NÃºmero"
                    android:layout_gravity="center"
                    android:textStyle="italic"
                    android:gravity="right"
                    />

                <ImageView
                    android:id="@+id/huesoAmarillo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="left"
                    android:paddingLeft="10dp"
                    android:src="@drawable/hueso_amarillo" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_below="@id/cvMascotas"
        android:layout_marginTop="10dp"
        />

</LinearLayout>